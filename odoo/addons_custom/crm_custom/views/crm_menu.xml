<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define a new menu for managing customer requests -->
        <menuitem id="menu_customer_request_management" name="Customer Request Management" parent="crm.menu_crm_opportunities" sequence="30"/>

        <!-- Define a new action for managing customer requests -->
        <act_window id="action_customer_request_management" name="Customer Requests" res_model="crm.customer.request" view_mode="kanban,tree,form"/>

        <!-- Define access rights for the menu -->
        <record id="group_crm_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_crm_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_crm_user'))]"/>
        </record>

        <record id="group_crm_request_manager" model="res.groups">
            <field name="name">Request Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_crm_manager'))]"/>
        </record>

        <record id="menu_customer_request_management" model="ir.ui.menu">
            <field name="name">Customer Requests</field>
            <field name="parent_id" ref="menu_customer_request_management"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_crm_request_manager')])]"/>
            <field name="action" ref="action_customer_request_management"/>
            <field name="sequence" eval="10"/>
        </record>
    </data>
</odoo>
